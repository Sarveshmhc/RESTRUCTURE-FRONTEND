{
  "name": "hrm.frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "barrel": "tsx scripts/generate-barrel.ts",
    "barrel:watch": "tsx scripts/barrel-watcher.ts",
    "barrel:watch-simple": "nodemon --watch src/views/components --ext ts,tsx,js,jsx --ignore src/views/components/index.ts --exec \"npm run barrel\"",
    "dev": "vite",
    "dev:auto": "concurrently --names \"DEV,BARREL\" --prefix-colors \"cyan,magenta\" \"npm run dev\" \"npm run barrel:watch\"",
    "dev:with-barrel": "concurrently \"npm run dev\" \"npm run barrel:watch-simple\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-router-dom": "^7.9.1",
    "styled-components": "^6.1.19",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "barrelsby": "^2.8.1",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.9"
  }
}
